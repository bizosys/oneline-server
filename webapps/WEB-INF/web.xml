<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>Oneline Server Dashboard</display-name>
	<description></description>
	
	<filter>
    	<filter-name>security</filter-name>
    	<filter-class>com.bizosys.oneline.authorization.SecurityFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>security</filter-name>
        <url-pattern>/oneline.html/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>Server Startup Servlet</servlet-name>
		<servlet-class>com.bizosys.oneline.servlet.StartupServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
        <servlet-name>MonitorHealthRest</servlet-name>
        <servlet-class>com.bizosys.oneline.management.MonitorHealthServlet</servlet-class>
        <load-on-startup>6</load-on-startup>
    </servlet>
	

    <servlet>
        <servlet-name>OnelineServlet</servlet-name>
        <servlet-class>com.bizosys.oneline.servlet.FrontControllerServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

	 <servlet-mapping>
        <servlet-name>OnelineServlet</servlet-name>
        <url-pattern>/oneline.html/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>MonitorHealthRest</servlet-name>
        <url-pattern>/health</url-pattern>
    </servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
</web-app>